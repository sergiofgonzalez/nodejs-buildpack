#!/usr/bin/env bash
export PACK_STACK_ID="org.cloudfoundry.stacks.$CF_STACK"

BUILD_DIR=$1

echo 'default_process_types:'

command=$(grep "command" "$BUILD_DIR/metadata.toml")
if [[ "$command" =~ command\ *=\ *\"(.*)\"$ ]]; then
    echo "  web: ${BASH_REMATCH[1]}"
fi

rm "$BUILD_DIR/metadata.toml"
