#!/usr/bin/env bash
export PACK_STACK_ID="org.cloudfoundry.stacks.$CF_STACK"

BUILD_DIR=$1

BP_DIR=$(dirname "$(dirname $0)")

"$BP_DIR/bin/v3-detector" \
-buildpacks "$BP_DIR/cnbs" \
-group "$BUILD_DIR/../group.toml" \
-launch "$BUILD_DIR/.." \
-order "$BP_DIR/order.toml" \
-plan "$BUILD_DIR/../plan.toml"
